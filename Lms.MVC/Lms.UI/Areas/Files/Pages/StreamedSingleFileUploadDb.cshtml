@page
@model Lms.MVC.UI.Areas.Files.StreamedSingleFileUploadDbModel
@{
    ViewData["Title"] = "Streamed Single File Upload with AJAX (Db)";
}

<h1>Stream a file with AJAX to a database with a controller endpoint</h1>

<form id="uploadForm" asp-action="UploadDatabase" asp-controller="Files" method="post"
      enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;">
    <dl>
        <dt>
            <label for="note">Description</label>
        </dt>
        <dd>
            <input id="description" type="text" name="description" />
        </dd>
        <dt>
            <label for="file">File</label>
        </dt>
        <dd>
            <input id="file" type="file" name="file" />
        </dd>
    </dl>

    <input class="btn" type="submit" value="Upload" />
    <div style="margin-top:15px">
        <output form="uploadForm" name="result"></output>
    </div>
</form>
<li><a asp-page="/StreamedSingleFileUploadDb">Stream a file with AJAX to a controller endpoint</a></li>

