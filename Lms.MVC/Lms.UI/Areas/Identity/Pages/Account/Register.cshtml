@page
@model RegisterModel
@inject ICourseSelectService service
@{
    ViewData["Title"] = "Register";
}


<div class="card-holder d-flex justify-content-center">

    <div class="lms-logo align-self-lg-center">
        <img class="card-img" src="~/Assets/Lms-Svg.svg" />
    </div>
</div>

<div class="container container-media">
    <div class="d-flex justify-content-center h-100">
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card">
            <div class="card-header">
                <h3>Register</h3>

            </div>
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div>

                        <div class="input-group form-group">

                            <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="input-group form-group">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="input-group form-group">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                                    @{ 
                                            var i = 0;
                                    }
                    <div>
                        @Html.ListBoxFor(m => m.Input.SelectedCourseIds, await service.GetTypeAsync(), new { @class = "form-control" })
                    </div>



                        @*<div  class="dropdown">
                            <label asp-for="Input.Courses"></label>
                            <button class="btn btn-default dropdown-toggle" type="button"
                                    id="dropdownMenu1" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="true">
                                <i class="glyphicon glyphicon-cog"></i>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu checkbox-menu allow-focus" aria-labelledby="dropdownMenu1">
                                @foreach (var item in await service.GetTypeAsync())
	{
                                <li>
                                    <label>
                                        <input  asp-for="Input.IsChecked" type="checkbox"> @item.Text />
                                        <input type="hidden" asp-for="Input.SelectedCourseIds[i]" value="@item.Value" />
                                    </label>
                                </li>
                                    i++;

                                }

                            </ul>
                        </div>*@


                        <div>
                        @Html.ListBoxFor(m => m.Input.SelectedCourseIds, await service.GetTypeAsync(), new { @class = "listbox" })
                        @*<select asp-for="Input.Courses" asp-items="@await service.GetTypeAsync()" class="form-control">
            <option selected="selected" value="">Please select a course</option>
        </select>*@
                    </div>



                        @if (User.IsInRole("Admin"))
                        {

                            <div>
                                <div>
                                    <label asp-for="Input.Role"></label>
                                </div>
                                <br />
                                <input type="radio" value="Student" asp-for="Input.Role" />
                                <label for="Student">Student</label>
                                <input type="radio" value="Teacher" asp-for="Input.Role" />
                                <label for="Teacher">Teacher</label>
                                <input type="radio" value="Admin" asp-for="Input.Role" />
                                <label for="Admin">Admin</label>
                                <span asp-validation-for="Input.Role" class="text-danger"></span>
                            </div>
                        }
                    </div>
                            <div class="form-group">
                                <button type="submit" class="btn float-right login_btn">Register</button>
                            </div>
</form>
            </div>
        </div>
    </div>
</div>


