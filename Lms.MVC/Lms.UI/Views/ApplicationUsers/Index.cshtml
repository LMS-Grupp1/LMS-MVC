@model PaginationResult<ApplicationUsersListViewModel>



<form>
    <div class="input-group">
        <input type="submit" value="Search" />
        <input type="text" name="Search" class="form-control" placeholder="Search..." autofocus>
        <button type="reset" class="btn bg-transparent" tabindex="-1" style="margin-left: -40px; z-index: 100;">
            <i class="fa fa-times"></i>
        </button>
    </div>
</form>






<table class="table table-dark table-striped text-info">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Email)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"> Email </a>
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Name)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Name</a>
            </th>
            <th>
                @*   @Html.DisplayNameFor(model => model.Role)*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"> Role</a>
            </th>



        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model.Results)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)

                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@(await Component.InvokeAsync<PaginationViewComponent>(Model))