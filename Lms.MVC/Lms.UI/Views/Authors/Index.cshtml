@model PaginationResult<Lms.MVC.UI.Models.ViewModels.AuthorViewModels.IndexAuthorViewModel>



<form class="search-form">
    <div class="input-group">
        <input type="submit" value="Search" />
        <input type="text" name="Search" class="form-control" placeholder="Search..." autofocus>
        <button type="reset" class="btn bg-transparent" tabindex="-1" style="margin-left: -40px; z-index: 100;">
            <i class="fa fa-times"></i>
        </button>
    </div>
</form>

<form class="clear-search-form">
    <a href="#" class="clear-anchor">Clear Search</a>
    <input type="hidden" name="Search" value="" />
</form>

<form class="form-group">

<div class="btn-group">
    <a type="submit" class="btn btn-outline-primary" asp-action="Index" asp-route-sortBy="FName">Sort By First Name</a>
    <button type="button" class="btn btn-primary dropdown-toggle-split" asp-action="Index" asp-route-sortBy="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropright</span>
    </button>
    <div class="dropdown-menu">
        <a class="dropdown-item" asp-action="Index" asp-route-sortBy="FNAgeD">Age Desc</a>
        <a class="dropdown-item" asp-action="Index" asp-route-sortBy="FNAgeA">Age Asc</a> 
    </div>

</div>
</form>


<table class="table table-dark table-striped text-info">
    <thead>
        <tr>
            <th>
                <form class="form-group">

                    <div class="btn-group">
                        <a type="submit" class="btn btn-outline-primary" asp-action="Index" asp-route-sortBy="FName">Sort By First Name</a>
                        <button type="button" class="btn btn-primary dropdown-toggle-split" asp-action="Index" asp-route-sortBy="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                            +
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="FNAgeD">Oldest First</a>
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="FNAgeA">Youngest First</a>
                        </div>

                    </div>
                </form>
                
            </th>

            <th>
                <form class="form-group">

                    <div class="btn-group">
                        <a type="submit" class="btn btn-outline-primary" asp-action="Index" asp-route-sortBy="LName">Sort By Last Name</a>
                        <button type="button" class="btn btn-primary dropdown-toggle-split" asp-action="Index" asp-route-sortBy="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                            +
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="LNAgeD">Oldest First</a>
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="LNAgeA">Youngest First</a>
                        </div>

                    </div>
                </form>
            </th>
            <th>
                <form class="form-group">

                    <div class="btn-group">
                        <a type="submit" class="btn btn-outline-primary" asp-action="Index" asp-route-sortBy="Age">Sort By Age</a>
                        <button type="button" class="btn btn-primary dropdown-toggle-split" asp-action="Index" asp-route-sortBy="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="sr-only">Toggle Dropright</span>
                            +
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="AFName">First Name A-Z</a>
                            <a class="dropdown-item" asp-action="Index" asp-route-sortBy="ALName">Last Name A-Z</a>
                        </div>

                    </div>
                </form>
            </th>



        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model.Results)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)

                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>


                
            </tr>
        }
    </tbody>
</table>
@(await Component.InvokeAsync<PaginationViewComponent>(Model))